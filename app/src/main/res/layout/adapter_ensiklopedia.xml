<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="3dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <ImageView
            android:id="@+id/ivFotoEnsiklopedia"
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@android:color/darker_gray"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvNamaEnsiklopdia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/ivFotoEnsiklopedia"
            android:fontFamily="@font/roboto_bold"
            android:text="Nama Ensiklopedia"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvKalimatEnsiklopedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaEnsiklopdia"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/ivFotoEnsiklopedia"
            android:fontFamily="@font/roboto_medium"
            android:lines="1"
            android:text="Ensiklopedia"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvNamaKabupaten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvKalimatEnsiklopedia"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/ivFotoEnsiklopedia"
            android:fontFamily="@font/roboto_medium"
            android:lines="1"
            android:text="Kabupaten Sumbawa Barat"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvKalimatKlikUntukInfoDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaKabupaten"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/ivFotoEnsiklopedia"
            android:fontFamily="@font/roboto"
            android:lines="1"
            android:text="Klik untuk melihat detail informasi"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

