<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailDataPertanianActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivDetailFotoPertanian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/sapi_di_lahan_rumput_luas_di_padang_tak_perlu_ke_australia_untuk_melihat_peternakan_keren_ini_indonesia_juga_punya" />

            <TextView
                style="@style/TextContent.Small.White"
                android:padding="8dp"
                android:text="Data Pertanian"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_baseline_grass_24"
                android:drawablePadding="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:background="#4D000000"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="bottom" />

        </FrameLayout>

        <TextView
            style="@style/TextContent.Subtitle"
            android:text="Deskripsi :"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetailDeskripsiDataPertanian"
            style="@style/TextContent.Subtitle"
            android:text="Pada tahun 2022 jumlah produksi Padi di Kabupaten Sumbawa Barat adalah 105.384,11 Ton dengan luas panen 16.064,9 Ha. Jumlah produksi Jagung adalah 82.368,24 Ton dengan luas panen 13.144,21 Ha. Sementara itu jumlah cadangan pangan Pemerintah adalah 31.720 Ton Beras, jumlah cadangan pangan Masyarakat adalah 751 Ton Beras. (Sumber Dinas Pertanian dan Dinas Ketahanan Pangan Kabupaten Sumbawa Barat)"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"/>

        <TextView
            style="@style/TextContent.Subtitle"
            android:text="Grafik Perbandingan Jumlah Produktifitas Komoditas Pertanian :"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ivDetailChartPertanian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/chart1_peternakan_2022"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>


</ScrollView>